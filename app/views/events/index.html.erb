<p><%= link_to new_event_path, class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-plus"></span>
    New event
  <% end %>
</p>

<table class="table table-striped">
<tr>
  <th>Name</th>
  <th>Actions</th>
</tr>
<% @events.each do |event| %>
  <tr >
  <td><%= event.name %></td>
  <td><%= link_to 'Show', event_path(event), :class => 'btn btn-success' %>
  <%= link_to 'Edit', edit_event_path(event), :class => 'btn btn-info' %>
  <%= link_to 'Delete', event_path(event), class: 'btn btn-danger', :method => :delete, :data => { :confirm=> "Are you sure?" } %>
  </td>
  </tr>
<% end %>
</table>
<br>
<%= paginate @events %>