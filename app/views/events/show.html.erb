<h3><%= @event.name%></h3>
<% if @event.logo.exists? %>

  <%= image_tag( @event.logo(:thumb) ) %>

<% end %>
<%= simple_format(@event.description) %>
<%= @event.release %>
<h2>Attendee List</h2>

<p>群組:
  <% @event.groups.each do |g| %>
    <%= g.name %>
  <% end %>
</p>
<% @event.attendees.each do |a| %>
  <p><%= a.name %></p>

<% end %>
<p><%= link_to 'Back to index', events_path, :class => "btn btn-primary" %></p>
